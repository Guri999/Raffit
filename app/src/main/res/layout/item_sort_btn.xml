<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:background="@color/white"
    android:paddingVertical="4dp"
    android:paddingHorizontal="16dp">
    <LinearLayout
        android:id="@+id/bt_item_accuracy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bt_item_recency">
        <ImageView
            android:id="@+id/iv_item_accuracy"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_check_24"
            android:layout_gravity="center_vertical"
            app:tint="@color/enable" />

        <TextView
            android:id="@+id/tv_item_accuracy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="정확도"
            android:textSize="14sp"
            android:textColor="@color/enable"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bt_item_recency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:id="@+id/iv_item_recency"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_check_24"
            android:layout_gravity="center_vertical"
            app:tint="@color/background" />

        <TextView
            android:id="@+id/tv_item_recency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recency"
            android:textSize="14sp"
            android:textColor="@color/background"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>